<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <RelativeLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_alignParentTop="true"
    android:background="#689F38"
    android:gravity="center"
    android:layout_gravity="center">

</RelativeLayout>

<ScrollView
    android:id="@+id/scroll_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/header"
    android:layout_marginTop="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/lblOrderTitle"
            style="@style/CustomTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/strOrderTitle"></TextView>

        <TextView
            android:id="@+id/lblOrderDesc"
            style="@style/CustomDescriptionStyle"
            android:layout_height="wrap_content"
            android:text="@string/strOrderDescription"
            android:textAlignment="center"></TextView>

        <TextView
            android:id="@+id/txtMessage"
            style="@style/CustomSubTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/lblBasicInfo"
            style="@style/CustomSubTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strOrderBasicInfo"></TextView>

        <EditText
            android:id="@+id/txtFirstName"
            style="@style/CustomTextBoxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:ems="10"
            android:hint="@string/strFirstName"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtLastName"
            style="@style/CustomTextBoxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:ems="10"
            android:hint="@string/strLastName"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtEmail"
            style="@style/CustomTextBoxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:hint="@string/strEmail"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/txtShippingInfo"
            style="@style/CustomSubTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strOrderShippingInfo"></TextView>

        <EditText
            android:id="@+id/txtAddress1"
            style="@style/CustomTextBoxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:hint="@string/strAddress1"
            android:inputType="text|textPostalAddress" />

        <EditText
            android:id="@+id/txtAddress2"
            style="@style/CustomTextBoxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:hint="@string/strAddress2"
            android:inputType="text|textPostalAddress" />

        <EditText
            android:id="@+id/txtCity"
            style="@style/CustomTextBoxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:hint="@string/strCity"
            android:inputType="text|textPostalAddress" />

        <Spinner
            android:id="@+id/spinerStates"
            style="@style/CustomTextBoxStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/edit_text"
            android:keyboardNavigationCluster="false"
            android:textAlignment="center" />



        <EditText
            android:id="@+id/txtZipcode"
            style="@style/CustomTextBoxStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:hint="@string/strZipCode"
            android:inputType="textPostalAddress" />

        <CheckBox
            android:id="@+id/chkBlogSubscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:checked="true"
            android:text="@string/strBlogSubscribe" />

        <TextView
            android:id="@+id/txtOrderResult"
            style="@style/CustomSubTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <Button
            android:id="@+id/btnPlaceOrder"
            style="@style/CustomGoldButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGold"
            android:text="@string/strPlaceOrder"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>
</RelativeLayout>


